@inject DreamJourney.Services.Interfaces.IUserContextService UserContext
@model DreamJourney.ViewModels.Trip.TripSearchViewModel

@{
    ViewData["Title"] = "Trips";
}

<form method="get" class="mb-4 p-4 bg-white rounded shadow-sm">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <input type="text"
                   name="SearchTerm"
                   value="@Model.SearchTerm"
                   placeholder="Търси по дестинация"
                   class="form-control" />
        </div>

        <div class="col-md-3">
            <input type="number"
                   name="MinPrice"
                   value="@Model.MinPrice"
                   placeholder="Минимална цена"
                   class="form-control" />
        </div>

        <div class="col-md-3">
            <input type="number"
                   name="MaxPrice"
                   value="@Model.MaxPrice"
                   placeholder="Максимална цена"
                   class="form-control" />
        </div>

        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-cta-cadetblue">
                Търси
            </button>
        </div>
    </div>
</form>

@if (Model.Results != null && Model.Results.Any())
{
    <div class="row g-4">
        @foreach (var item in Model.Results)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card border-0 shadow-sm hover-card h-100">

                    <img src="@item.ImageUrl"
                         class="card-img-top"
                         style="height:220px; object-fit:cover;" />

                    <div class="card-body text-center d-flex flex-column">
                        <h5 class="fw-bold">@item.Title</h5>
                        <h6 class="fw-bold cta-cadetblue">@item.Destinations</h6>
                        <p class="cta-tan-text fw-semibold mb-3">
                            @item.Days дни · @item.Price €
                        </p>

                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="btn btn-cta-cadetblue mt-auto">
                            Детайли
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted text-center fs-5">
        Няма намерени резултати.
    </p>
}
