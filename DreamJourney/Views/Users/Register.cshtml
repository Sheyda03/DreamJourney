@model DreamJourney.ViewModels.User.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4 mt-5 mb-5">
            <div class="card-body p-4">

                <h2 class="text-center fw-bold cta-tan-text mb-2">
                    Създай акаунт
                </h2>

                <p class="text-center text-muted mb-4">
                    Започни своето пътешествие с Dream Journey
                </p>

                <form asp-action="Register" method="post">

                    <div class="row g-3">

                        <div class="col-md-6">
                            <label asp-for="Username" class="form-label fw-semibold"></label>
                            <input asp-for="Username" class="form-control rounded-3" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control rounded-3" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label fw-semibold"></label>
                            <input asp-for="FirstName" class="form-control rounded-3" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label fw-semibold"></label>
                            <input asp-for="LastName" class="form-control rounded-3" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label fw-semibold"></label>
                            <input type="password" asp-for="Password" class="form-control rounded-3" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>                        
                    </div>

                    <div class="alert alert-info mt-4 small">
                        <strong>Важно:</strong><br />
                        • Турист не може да създава оферти<br />
                        • Туристическа агенция не може да кандидатства за пътуване
                    </div>

                    <div class="mt-3">
                        <label class="fw-semibold">Избери роля:</label><br />

                        <div class="form-check">
                            @Html.RadioButtonFor(m => m.Role, false, new { @class = "form-check-input" })
                            <label class="form-check-label">
                                Турист
                            </label>
                        </div>

                        <div class="form-check">
                            @Html.RadioButtonFor(m => m.Role, true, new { @class = "form-check-input" })
                            <label class="form-check-label">
                                Туристическа агенция
                            </label>
                        </div>
                    </div>

                    <button type="submit"
                            class="btn btn-cta-cadetblue w-100 mt-4 py-2 fw-semibold rounded-3">
                        Създай акаунт
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
